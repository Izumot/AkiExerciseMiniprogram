/* pages/exercise/exercise.wxss */
page {
  --td-button-danger-bg-color: #00a870; 
  --td-button-danger-border-color: #00a870;
  --td-button-danger-active-bg-color: #008f5f;
  --td-button-danger-active-border-color: #008f5f;
}

.page {
  height: 100vh;
}
.page_wrapper {
  padding: 0 32rpx
}

.content_wrapper {
  background-color: #fff;
  padding: 18rpx 32rpx;
  border-radius: 24rpx;
  margin-top: 32rpx;
  margin-bottom: 32rpx;
}

.option_wrapper {
  display: block;
  box-sizing: border-box;
  height: 600rpx;
}

.theme-card {
  border-radius: 24rpx;
  margin: 32rpx;
  overflow: hidden;
}


.popup_block {
  width: 100vw;
  height: 240px;
  background: #fff;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.popup_header {
  display: flex;
  align-items: center;
  height: 116rpx;
}

.popup_title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
}
.slider_wrapper {
  background: #fff;
  padding-top: 40rpx;
}